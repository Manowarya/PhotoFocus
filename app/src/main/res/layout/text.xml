<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/textBtnsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:visibility="gone"
    >

    <LinearLayout
        android:id="@+id/correctionLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_80sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <TextView
            android:id="@+id/colorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:drawablePadding="@dimen/_5sdp"
            android:text="@string/color_text"
            android:textColor="@drawable/selector"
            android:textSize="@dimen/_14sdp"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/fonts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:drawablePadding="@dimen/_5sdp"

            android:text="@string/font"
            android:textColor="@drawable/selector"
            android:textSize="@dimen/_14sdp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/colorToolsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/correctionLayout"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/colorTextLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_8sdp"
            android:visibility="visible">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                android:layout_marginHorizontal="@dimen/_8sdp"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="@dimen/_10sdp">
                <ImageView
                    android:id="@+id/textColorBlack"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:contentDescription="@string/app_name"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_10sdp">
                <ImageView
                    android:id="@+id/textColorWhite"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:contentDescription="@string/app_name"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                android:layout_marginHorizontal="@dimen/_8sdp"
                app:cardBackgroundColor="@color/red"
                app:cardCornerRadius="@dimen/_10sdp">
                <ImageView
                    android:id="@+id/textColorRed"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:contentDescription="@string/app_name"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/green"
                app:cardCornerRadius="@dimen/_10sdp">
                <ImageView
                    android:id="@+id/textColorGreen"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:contentDescription="@string/app_name"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/blue"
                android:layout_marginHorizontal="@dimen/_8sdp"
                app:cardCornerRadius="@dimen/_10sdp">
                <ImageView
                    android:id="@+id/textColorBlue"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:contentDescription="@string/app_name"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/purple_500"
                app:cardCornerRadius="@dimen/_10sdp">
                <ImageView
                    android:id="@+id/textColorPurple"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:contentDescription="@string/app_name"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/correctionLayout">

        <LinearLayout
            android:id="@+id/fontsTextLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_8sdp"
            android:visibility="gone">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                android:layout_marginHorizontal="@dimen/_8sdp"
                app:cardBackgroundColor="@color/light_gray"
                app:cardCornerRadius="@dimen/_10sdp">
                <ImageView
                    android:id="@+id/textFont_1"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:contentDescription="@string/app_name"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/light_gray"
                app:cardCornerRadius="@dimen/_10sdp">
                <ImageView
                    android:id="@+id/textFont_2"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:contentDescription="@string/app_name"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                android:layout_marginHorizontal="@dimen/_8sdp"
                app:cardBackgroundColor="@color/light_gray"
                app:cardCornerRadius="@dimen/_10sdp">
                <ImageView
                    android:id="@+id/textFont_3"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:contentDescription="@string/app_name"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/light_gray"
                app:cardCornerRadius="@dimen/_10sdp">
                <ImageView
                    android:id="@+id/textFont_4"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:contentDescription="@string/app_name"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/light_gray"
                android:layout_marginHorizontal="@dimen/_8sdp"
                app:cardCornerRadius="@dimen/_10sdp">
                <ImageView
                    android:id="@+id/textFont_5"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:contentDescription="@string/app_name"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/light_gray"
                app:cardCornerRadius="@dimen/_10sdp">
                <ImageView
                    android:id="@+id/textFont_6"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:contentDescription="@string/app_name"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>





