<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/templatesBtnsLayout"
    android:background="@drawable/background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:visibility="gone"
  >

    <LinearLayout
        android:id="@+id/templatesLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_80sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <TextView
            android:id="@+id/sysTemplates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:drawablePadding="@dimen/_5sdp"
            android:text="@string/templates"
            android:textColor="@drawable/selector"
            android:textSize="@dimen/_14sdp"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/userTemplates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:drawablePadding="@dimen/_5sdp"
            android:text="@string/user_templates"
            android:textColor="@drawable/selector"
            android:textSize="@dimen/_14sdp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/templatesLinearLayout">

        <LinearLayout
            android:id="@+id/templatesSysLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_8sdp"
            android:visibility="visible">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                android:layout_marginHorizontal="@dimen/_8sdp"
                app:cardBackgroundColor="@color/light_gray"
                app:cardCornerRadius="@dimen/_10sdp">
                <ImageView
                    android:id="@+id/sysTemplates_1"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:contentDescription="@string/app_name"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/light_gray"
                app:cardCornerRadius="@dimen/_10sdp">
                <ImageView
                    android:id="@+id/sysTemplates_2"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:contentDescription="@string/app_name"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                android:layout_marginHorizontal="@dimen/_8sdp"
                app:cardBackgroundColor="@color/light_gray"
                app:cardCornerRadius="@dimen/_10sdp">
                <ImageView
                    android:id="@+id/sysTemplates_3"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:contentDescription="@string/app_name"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/light_gray"
                app:cardCornerRadius="@dimen/_10sdp">
                <ImageView
                    android:id="@+id/sysTemplates_4"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:contentDescription="@string/app_name"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/light_gray"
                android:layout_marginHorizontal="@dimen/_8sdp"
                app:cardCornerRadius="@dimen/_10sdp">
                <ImageView
                    android:id="@+id/sysTemplates_5"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:contentDescription="@string/app_name"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/light_gray"
                app:cardCornerRadius="@dimen/_10sdp">
                <ImageView
                    android:id="@+id/sysTemplates_6"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:contentDescription="@string/app_name"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/templatesLinearLayout">

        <LinearLayout
            android:id="@+id/templatesUserLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_8sdp"
            android:visibility="gone">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                android:layout_marginHorizontal="@dimen/_8sdp"
                app:cardBackgroundColor="@color/light_gray"
                app:cardCornerRadius="@dimen/_10sdp">
                <ImageView
                    android:id="@+id/userTemplates_1"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:contentDescription="@string/app_name"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/light_gray"
                app:cardCornerRadius="@dimen/_10sdp">
                <ImageView
                    android:id="@+id/userTemplates_2"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:contentDescription="@string/app_name"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                android:layout_marginHorizontal="@dimen/_8sdp"
                app:cardBackgroundColor="@color/light_gray"
                app:cardCornerRadius="@dimen/_10sdp">
                <ImageView
                    android:id="@+id/userTemplates_3"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:contentDescription="@string/app_name"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/light_gray"
                app:cardCornerRadius="@dimen/_10sdp">
                <ImageView
                    android:id="@+id/userTemplates_4"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:contentDescription="@string/app_name"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/light_gray"
                android:layout_marginHorizontal="@dimen/_8sdp"
                app:cardCornerRadius="@dimen/_10sdp">
                <ImageView
                    android:id="@+id/userTemplates_5"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:contentDescription="@string/app_name"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/light_gray"
                app:cardCornerRadius="@dimen/_10sdp">
                <ImageView
                    android:id="@+id/userTemplates_6"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:contentDescription="@string/app_name"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>